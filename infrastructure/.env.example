# VirusJaeger Environment Configuration
# Copy this file to .env and customize as needed

# Database Configuration
POSTGRES_USER=virus
POSTGRES_PASSWORD=virus
POSTGRES_DB=virus
POSTGRES_DSN=postgresql+asyncpg://virus:virus@postgres:5432/virus

# Message Queue Configuration
RABBITMQ_DEFAULT_USER=guest
RABBITMQ_DEFAULT_PASS=guest
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672//

# Object Storage Configuration (MinIO)
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=minioadmin
S3_ENDPOINT=http://minio:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=samples

# Search Engine Configuration (OpenSearch)
OPENSEARCH_INITIAL_ADMIN_PASSWORD=admin123
OPENSEARCH_URL=http://opensearch:9200

# Application Configuration
MAX_FILE_SIZE_MB=64
PYTHONUNBUFFERED=1

# Development Settings
DEBUG=false
API_CORS_ORIGINS=["http://localhost:3000"]

# Production Security (Change these in production!)
# POSTGRES_PASSWORD=secure_password_here
# RABBITMQ_DEFAULT_PASS=secure_password_here  
# MINIO_ROOT_PASSWORD=secure_password_here
# OPENSEARCH_INITIAL_ADMIN_PASSWORD=secure_password_here

# Worker Scaling (adjust based on your needs)
# CLAMAV_WORKERS=2
# YARA_WORKERS=2
# SCAN_WORKERS=1
# ORCHESTRATOR_WORKERS=1

# Custom Rules
# YARA_RULES_UPDATE_INTERVAL=3600  # seconds
# CLAMAV_UPDATE_INTERVAL=3600     # seconds